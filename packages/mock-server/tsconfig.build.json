{
  "extends": "./tsconfig.json",
  "include": ["src", "package.json"],
  "exclude": [
    "dist",
    "test",
    "vite.config.ts",
    "**/*.test.ts",
    "**/*.test.json",
    "**/*.test.md"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/"
  }
}
