{
  "name": "@scalar/mock-server-docker",
  "description": "Docker deployment for Scalar Mock Server",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "packages/mock-server/docker"
  },
  "keywords": [
    "scalar",
    "openapi",
    "swagger",
    "mock-server",
    "docker"
  ],
  "version": "0.8.4",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "scalar-build-vite",
    "docker:build": "pnpm build && docker build --no-cache -t scalar-mock-server-docker .",
    "docker:run": "docker run -v ./documents:/docs:ro -p 3000:3000 --rm --init scalar-mock-server-docker",
    "docker:run:env": "docker run -e OPENAPI_DOCUMENT=\"$(cat ./documents/example.yaml)\" -p 3000:3000 --rm --init scalar-mock-server-docker",
    "types:build": "scalar-types-build",
    "types:check": "scalar-types-check"
  },
  "type": "module",
  "main": "dist/docker-entrypoint.js",
  "dependencies": {
    "@scalar/hono-api-reference": "workspace:*",
    "@scalar/mock-server": "workspace:*",
    "@hono/node-server": "catalog:*"
  },
  "devDependencies": {
    "@scalar/build-tooling": "workspace:*",
    "@types/node": "catalog:*",
    "vite": "catalog:*"
  }
}
