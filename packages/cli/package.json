{
  "name": "@scalar/cli",
  "description": "A command-line interface to work with OpenAPI files",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "scalar",
    "openapi",
    "swagger",
    "cli"
  ],
  "version": "0.2.76",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "@scalar/cli": "pnpm vite-node src/index.ts",
    "build": "rm -Rf dist/ && tsc && rollup -c",
    "cli:link": "pnpm run build && npm unlink -g && npm link",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "files": [
    "./dist"
  ],
  "bin": {
    "scalar": "./dist/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.0",
    "@parcel/watcher": "^2.4.1",
    "@scalar/api-reference": "workspace:*",
    "@scalar/mock-server": "workspace:*",
    "@scalar/oas-utils": "workspace:*",
    "@scalar/openapi-parser": "^0.3.2",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "hono": "^4.2.7",
    "kleur": "^4.1.5",
    "openapi-types": "^12.1.3",
    "prettyjson": "^1.2.5",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.8.4",
    "execa": "^8.0.1",
    "rollup": "^4.16.4",
    "rollup-plugin-delete": "^2.0.0",
    "strip-ansi": "^7.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3",
    "vite-node": "^1.3.1"
  }
}
