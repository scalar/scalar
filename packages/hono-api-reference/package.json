{
  "name": "@scalar/hono-api-reference",
  "description": "A middleware for using the Scalar API reference in Hono",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/hono-api-reference"
  },
  "version": "0.5.107",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "dev": "nodemon --exec \"vite-node playground/index.ts\" --ext ts --quiet --watch ./",
    "docker:build": "build --platform=linux/amd64 -t ${image_name} --build-arg=\"BASE_IMAGE=scalar-base\" -f ./examples/hono-api-reference/Dockerfile .",
    "test": "vitest run"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "module": "dist/index.js",
  "dependencies": {
    "hono": "^4.2.7"
  },
  "devDependencies": {
    "@hono/node-server": "^1.11.0",
    "@hono/zod-openapi": "^0.8.6",
    "hono": "^4.2.7",
    "tsup": "^7.2.0",
    "vite": "^5.2.10",
    "vitest": "^1.6.0"
  }
}
