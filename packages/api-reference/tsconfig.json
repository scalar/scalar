{
  "extends": "../../tsconfig.json",
  "include": ["./src", "./test"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"],
  "compilerOptions": {
    // TODO: Reenable when we can fix all the issues
    "noUncheckedIndexedAccess": false,
    // TODO: Reenable when we can fix all the issues
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@/*": ["./src/*"],
      "@v2/*": ["./src/v2/*"],
      "@test/*": ["./test/*"]
    },
    "types": ["vite/client", "node"]
  }
}
