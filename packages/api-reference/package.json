{
  "name": "@scalar/api-reference",
  "description": "generate beautiful API references from OpenAPI specs",
  "keywords": [
    "vue",
    "vue3",
    "swagger",
    "openapi",
    "spec",
    "reference",
    "documentation",
    "component"
  ],
  "version": "0.4.0",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/api-reference"
  },
  "bugs": {
    "url": "https://github.com/scalar/scalar/issues/new"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build && pnpm types:build && tsc-alias -p tsconfig.build.json",
    "dev": "vite",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "preview": "vite preview",
    "test": "vitest",
    "types:build": "vue-tsc -p tsconfig.build.json",
    "types:check": "vue-tsc --noEmit --skipLibCheck",
    "build:cdn": "vite build -c vite.cdn.config.ts",
    "preview:cdn": "http-server"
  },
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    "development": "./src/index.ts",
    "import": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@headlessui/vue": "1.7.14",
    "@scalar/api-client": "workspace:*",
    "@scalar/default-theme": "workspace:*",
    "@scalar/swagger-editor": "workspace:*",
    "@scalar/swagger-parser": "workspace:*",
    "@scalar/use-clipboard": "workspace:*",
    "@scalar/use-keyboard-event": "workspace:*",
    "@scalar/use-toasts": "workspace:*",
    "@scalar/use-tooltip": "workspace:*",
    "@vueuse/core": "10.1.2",
    "codemirror": "6.0.1",
    "fuse.js": "^6.6.2",
    "httpsnippet-lite": "3.0.5",
    "js-yaml": "4.1.0",
    "modern-normalize": "^2.0.0",
    "nanoid": "4.0.2",
    "postcss-nested": "^6.0.1",
    "rehype-document": "6.1.0",
    "rehype-format": "4.0.1",
    "rehype-sanitize": "5.0.1",
    "rehype-stringify": "9.0.3",
    "remark-gfm": "3.0.1",
    "remark-parse": "10.0.2",
    "remark-rehype": "10.1.0",
    "remark-textr": "5.0.1",
    "typographic-base": "1.0.4",
    "unified": "10.1.2",
    "xmldom": "0.6.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "4.2.3",
    "http-server": "^14.1.1",
    "postcss": "^8.4.28",
    "tsc-alias": "1.8.6",
    "vite": "4.4.8",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-plugin-node-polyfills": "^0.11.2",
    "vitest": "0.34.1",
    "vue-tsc": "1.8.8"
  },
  "peerDependencies": {
    "vue": "3.3.4",
    "@types/js-yaml": "4.0.5",
    "@types/xmldom": "0.1.31"
  }
}
