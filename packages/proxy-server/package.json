{
  "name": "@scalar/proxy-server",
  "description": "A simple proxy server running on hono which can be deployed anywhere!",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "keywords": [
    "api docs references typescript proxy cloudflare"
  ],
  "version": "0.0.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "deploy": "wrangler deploy --minify src/proxy-worker.ts",
    "dev:bun": "bun run --hot src/dev-server.ts",
    "dev:cloudflare": "wrangler dev src/dev-server.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "types:check": "tsc --noEmit --skipLibCheck --composite false"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/proxy-server"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "wrangler": "^3.32.0"
  }
}
