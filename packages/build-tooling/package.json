{
  "name": "@scalar/build-tooling",
  "description": "Build tooling and helpers",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "packages/build-tooling"
  },
  "keywords": [],
  "version": "0.4.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "node scripts/build-esbuild.js",
    "dev": "vite",
    "format": "node scripts/format.js",
    "lint:check": "node scripts/lint-check.js",
    "lint:fix": "node scripts/lint-fix.js",
    "test": "vitest",
    "types:build": "node scripts/types-build.js",
    "types:check": "node scripts/types-check.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./esbuild": {
      "import": "./dist/esbuild/index.js",
      "types": "./dist/esbuild/index.d.ts",
      "default": "./dist/esbuild/index.js"
    },
    "./vite": {
      "import": "./dist/vite/index.js",
      "types": "./dist/vite/index.d.ts",
      "default": "./dist/vite/index.js"
    }
  },
  "files": [
    "dist",
    "scripts",
    "CHANGELOG.md"
  ],
  "bin": {
    "scalar-build-esbuild": "scripts/build-esbuild.js",
    "scalar-build-vite": "scripts/build-vite.js",
    "scalar-format-check": "scripts/format-check.js",
    "scalar-format": "scripts/format.js",
    "scalar-lint-check": "scripts/lint-check.js",
    "scalar-lint-fix": "scripts/lint-fix.js",
    "scalar-types-build-vue": "scripts/types-build-vue.js",
    "scalar-types-build": "scripts/types-build.js",
    "scalar-types-check-vue": "scripts/types-check-vue.js",
    "scalar-types-check": "scripts/types-check.js"
  },
  "dependencies": {
    "ansis": "catalog:*",
    "chokidar": "catalog:*",
    "esbuild": "catalog:*",
    "fast-glob": "catalog:*",
    "picomatch": "catalog:*"
  },
  "devDependencies": {
    "@types/node": "catalog:*",
    "@types/picomatch": "catalog:*",
    "vite": "catalog:*"
  },
  "peerDependencies": {
    "vite": "catalog:*"
  }
}
