{
  "name": "@scalar/fastify-api-reference",
  "description": "a fastify plugin to render an API reference from an automatically generated OpenAPI spec",
  "version": "0.6.0",
  "author": "Scalar (https://github.com/scalar)",
  "bugs": "https://github.com/scalar/scalar/issues/new",
  "dependencies": {
    "@scalar/api-reference": "workspace:*",
    "ejs": "3.1.9"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "4.3.4",
    "@vitest/coverage-v8": "0.34.4",
    "nodemon": "3.0.1",
    "tsc-alias": "1.8.8",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vite-node": "0.34.4",
    "vite-plugin-css-injected-by-js": "3.3.0",
    "vite-plugin-node-polyfills": "0.14.1",
    "vite-plugin-singlefile": "0.13.5",
    "vite-plugin-static-copy": "0.17.0",
    "vitest": "0.34.4"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    "import": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/scalar/scalar",
  "keywords": [
    "api",
    "documentation",
    "fastify",
    "openapi",
    "swagger"
  ],
  "license": "MIT",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "peerDependencies": {
    "@types/ejs": "3.1.3",
    "fastify": "4.23.2",
    "fastify-plugin": "4.5.1",
    "vue": "3.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/fastify-api-reference"
  },
  "scripts": {
    "build": "vite build && pnpm run build:template && pnpm types:build && tsc-alias -p tsconfig.build.json",
    "build:template": "vite build -c vite.template.config.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "test": "pnpm build && vitest",
    "types:build": "tsc -p tsconfig.build.json",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
