{
  "name": "@scalar/fastify-api-reference",
  "description": "a fastify plugin to render an API reference from a Swagger spec",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "keywords": [
    "api",
    "documentation",
    "fastify",
    "openapi",
    "swagger"
  ],
  "version": "1.10.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "test": "vitest",
    "types:build": "tsc -p tsconfig.build.json",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/fastify-api-reference"
  },
  "devDependencies": {
    "@scalar/api-reference": "workspace:*",
    "@vitest/coverage-v8": "^0.34.4",
    "fastify-html": "^0.2.0",
    "magic-string": "^0.30.4",
    "rollup-plugin-node-externals": "^6.1.1",
    "terser": "^5.24.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "vite": "^4.4.12",
    "vite-plugin-node-polyfills": "^0.14.1",
    "vite-plugin-static-copy": "^0.17.0",
    "vitest": "^0.34.4",
    "vue": "^3.3.0"
  },
  "peerDependencies": {
    "fastify": "^4.0.0",
    "fastify-html": "^0.2.0",
    "fastify-plugin": "^4.0.0"
  }
}
