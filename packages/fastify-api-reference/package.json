{
  "name": "@scalar/fastify-api-reference",
  "description": "a fastify plugin to render an API reference from a Swagger spec",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new",
  "keywords": [
    "api",
    "documentation",
    "fastify",
    "openapi",
    "swagger"
  ],
  "version": "0.6.48",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build && pnpm run build:template && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:template": "vite build -c vite.template.config.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "test": "vitest",
    "types:build": "tsc -p tsconfig.build.json",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/fastify-api-reference"
  },
  "dependencies": {
    "@scalar/api-reference": "workspace:*",
    "ejs": "3.1.9"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.4",
    "@vitejs/plugin-vue": "4.3.4",
    "@vitest/coverage-v8": "0.34.4",
    "magic-string": "0.30.4",
    "nodemon": "3.0.1",
    "rollup-plugin-node-externals": "6.1.1",
    "tsc-alias": "1.8.8",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vite-node": "0.34.4",
    "vite-plugin-css-injected-by-js": "3.3.0",
    "vite-plugin-node-polyfills": "0.14.1",
    "vite-plugin-singlefile": "0.13.5",
    "vite-plugin-static-copy": "0.17.0",
    "vitest": "0.34.4"
  },
  "peerDependencies": {
    "fastify": "^4.0.0",
    "fastify-plugin": "4.5.1",
    "vue": "^3.3.0"
  },
  "nx": {
    "tags": [
      "scope:package"
    ]
  }
}
