{
  "name": "@scalar/fastify-api-reference",
  "description": "a fastify plugin to render an API reference from an OpenAPI file",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "keywords": [
    "api",
    "documentation",
    "fastify",
    "openapi",
    "swagger"
  ],
  "version": "1.22.3",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "test": "vitest",
    "types:build": "tsc -p tsconfig.build.json",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/fastify-api-reference"
  },
  "module": "./dist/index.js",
  "dependencies": {
    "fastify-plugin": "^4.5.1"
  },
  "devDependencies": {
    "@scalar/api-reference": "workspace:*",
    "@vitest/coverage-v8": "^1.5.0",
    "fastify": "^4.26.2",
    "magic-string": "^0.30.8",
    "rollup-plugin-node-externals": "^7.1.1",
    "terser": "^5.30.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.3",
    "vite": "^5.2.9",
    "vite-plugin-static-copy": "^1.0.2",
    "vitest": "^1.5.0",
    "vue": "^3.4.21"
  }
}
