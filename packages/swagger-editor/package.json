{
  "name": "@scalar/swagger-editor",
  "description": "an editor which is tailored to write OpenAPI spec",
  "keywords": [
    "openapi",
    "swagger",
    "editor",
    "api",
    "openapi",
    "spec"
  ],
  "version": "0.4.0",
  "author": "Scalar",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build && pnpm types:build && tsc-alias -p tsconfig.build.json",
    "dev": "vite",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "preview": "vite preview",
    "test": "vitest",
    "types:build": "vue-tsc -p tsconfig.build.json",
    "types:check": "vue-tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    "development": "./src/index.ts",
    "import": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@codemirror/lang-json": "6.0.1",
    "@codemirror/language": "6.8.0",
    "@codemirror/legacy-modes": "6.3.3",
    "@codemirror/view": "6.16.0",
    "@headlessui/vue": "1.7.14",
    "@hocuspocus/common": "2.3.1",
    "@hocuspocus/provider": "2.3.1",
    "@scalar/swagger-parser": "workspace:*",
    "@uiw/codemirror-theme-duotone": "4.21.3",
    "@vueuse/core": "10.1.2",
    "codemirror": "6.0.1",
    "nanoid": "4.0.2",
    "y-codemirror.next": "0.3.2",
    "yjs": "13.6.7"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "4.2.3",
    "tsc-alias": "1.8.6",
    "vite": "4.4.8",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vitest": "0.34.1",
    "vue-tsc": "1.8.8"
  },
  "peerDependencies": {
    "vue": "3.3.4"
  }
}
