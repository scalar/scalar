{
  "name": "@scalar/swagger-editor",
  "description": "an editor which is tailored to write OpenAPI spec",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "keywords": [
    "api",
    "editor",
    "openapi",
    "openapi",
    "spec",
    "swagger"
  ],
  "version": "0.10.6",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build && pnpm types:build && tsc-alias -p tsconfig.build.json",
    "dev": "vite",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "preview": "vite preview",
    "test": "vitest",
    "types:build": "vue-tsc -p tsconfig.build.json",
    "types:check": "vue-tsc --noEmit --skipLibCheck --composite false"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/swagger-editor"
  },
  "dependencies": {
    "@scalar/components": "workspace:*",
    "@scalar/themes": "workspace:*",
    "@scalar/use-codemirror": "workspace:*",
    "@vueuse/core": "^10.4.1",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitest/coverage-v8": "^0.34.4",
    "tsc-alias": "^1.8.8",
    "vite": "^4.5.2",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vitest": "^0.34.4",
    "vue-tsc": "^1.8.19"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
