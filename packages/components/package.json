{
  "name": "@scalar/components",
  "description": "Scalars component library",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/components"
  },
  "version": "0.7.8",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "run-p typegen:icons types:check \"build-only {@}\" --",
    "build-only": "vite build",
    "build:storybook": "storybook build",
    "dev": "storybook dev -p 5100",
    "format": "pnpm prettier --write .",
    "format:check": "pnpm prettier --check .",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "storybook": "storybook dev -p 5100",
    "test": "vitest",
    "typegen:icons": "node --no-warnings --loader ts-node/esm ./src/scripts/typegen.ts",
    "types:check": "vue-tsc --noEmit  --composite false"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": "./src/tailwind/index.ts"
  },
  "files": [
    "dist",
    "src/tailwind/**.ts"
  ],
  "module": "./dist/index.js",
  "dependencies": {
    "@floating-ui/utils": "^0.2.2",
    "@floating-ui/vue": "^1.0.2",
    "@headlessui/vue": "^1.7.20",
    "@scalar/oas-utils": "workspace:*",
    "@storybook/test": "^8.0.8",
    "@vueuse/core": "^10.9.0",
    "cva": "1.0.0-beta.1",
    "nanoid": "^5.0.1",
    "prismjs": "^1.29.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@rise8/tailwind-pixel-perfect-preset": "^1.0.1",
    "@scalar/themes": "workspace:*",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/vue3": "^8.0.8",
    "@storybook/vue3-vite": "^8.0.8",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.8.4",
    "@types/prismjs": "^1.26.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^22.1.0",
    "npm-run-all2": "^6.1.1",
    "plugins": "^0.4.2",
    "postcss": "^8.4.38",
    "postcss-prefix-selector": "^1.16.0",
    "storybook": "^8.0.8",
    "storybook-dark-mode": "^4.0.1",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^1.5.0",
    "vue-tsc": "^1.8.19"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
