{
  "name": "@scalar/components",
  "description": "Scalars component library",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "version": "0.2.5",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "run-p types:check \"build-only {@}\" --",
    "build-only": "vite build",
    "build:storybook": "storybook build",
    "dev": "storybook dev -p 6006",
    "format": "pnpm prettier --write .",
    "format:check": "pnpm prettier --check .",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "typegen:icons": "node --no-warnings --loader ts-node/esm ./src/scripts/typegen.ts",
    "types:check": "vue-tsc --noEmit  --composite false"
  },
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@vueuse/core": "^10.4.1",
    "@xmldom/xmldom": "^0.8.4",
    "class-variance-authority": "^0.7.0",
    "cva": "1.0.0-beta.1",
    "nanoid": "^5.0.1",
    "tailwind-merge": "^2.0.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@etchteam/storybook-addon-css-variables-theme": "^1.5.1",
    "@rise8/tailwind-pixel-perfect-preset": "^1.0.1",
    "@scalar/themes": "workspace:*",
    "@storybook/addon-essentials": "^7.5.2",
    "@storybook/addon-interactions": "^7.5.2",
    "@storybook/addon-links": "^7.5.2",
    "@storybook/blocks": "^7.5.2",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.5.2",
    "@storybook/vue3-vite": "^7.5.2",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.6.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^22.1.0",
    "npm-run-all2": "^6.1.1",
    "plugins": "^0.4.2",
    "postcss": "^8.4.31",
    "postcss-prefix-selector": "^1.16.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.2",
    "storybook-dark-mode": "^3.0.1",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.1",
    "vite-plugin-dts": "^3.6.3",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.19"
  }
}
