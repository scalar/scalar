{
  "name": "@scalar/components",
  "description": "Scalars component library",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "packages/components"
  },
  "version": "0.14.34",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm typegen:icons && scalar-build-vite",
    "build:storybook": "storybook build",
    "clean:snapshots": "shx rm -rf \"**/snapshots\"",
    "dev": "storybook dev -p 5100 --ci",
    "format": "pnpm prettier --write .",
    "format:check": "pnpm prettier --check .",
    "lint:check": "eslint . && pnpm lint:icons",
    "lint:fix": "eslint . --fix",
    "lint:icons": "svglint src/components/ScalarIcon/icons/*.svg --config src/components/ScalarIcon/.svglintrc.js",
    "preview": "vite preview --outDir storybook-static -c test/vite.config.ts 1>&2",
    "test": "vitest",
    "test:e2e": "PW_TEST_CONNECT_WS_ENDPOINT=ws://127.0.0.1:5001/ playwright test",
    "test:e2e:ci": "CI=1 playwright test",
    "test:e2e:playwright": "docker run --network=host -e PORT=5001 --rm --name scalar-playwright scalarapi/playwright:1.55.0",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ui": "pnpm test:e2e --ui",
    "test:e2e:update": "pnpm test:e2e --update-snapshots",
    "typegen:icons": "vite-node ./src/scripts/typegen.ts",
    "types:build": "scalar-types-build-vue",
    "types:check": "scalar-types-check-vue"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "module": "./dist/index.js",
  "dependencies": {
    "@floating-ui/utils": "catalog:*",
    "@floating-ui/vue": "catalog:*",
    "@headlessui/vue": "catalog:*",
    "@scalar/code-highlight": "workspace:*",
    "@scalar/helpers": "workspace:*",
    "@scalar/icons": "workspace:*",
    "@scalar/oas-utils": "workspace:*",
    "@scalar/themes": "workspace:*",
    "@scalar/use-hooks": "workspace:*",
    "@scalar/use-toasts": "workspace:*",
    "@vueuse/core": "catalog:*",
    "cva": "1.0.0-beta.2",
    "nanoid": "catalog:*",
    "pretty-bytes": "^6.1.1",
    "radix-vue": "^1.9.3",
    "vue": "catalog:*",
    "vue-component-type-helpers": "^3.0.4"
  },
  "devDependencies": {
    "@headlessui/tailwindcss": "catalog:*",
    "@playwright/test": "catalog:*",
    "@scalar/build-tooling": "workspace:*",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@storybook/vue3": "^8.0.8",
    "@storybook/vue3-vite": "^8.0.8",
    "@tailwindcss/vite": "catalog:*",
    "@types/jsdom": "^21.1.3",
    "@types/node": "catalog:*",
    "@vitejs/plugin-vue": "catalog:*",
    "@vue/test-utils": "^2.4.1",
    "jsdom": "^22.1.0",
    "plugins": "^0.4.2",
    "storybook": "^8.0.8",
    "storybook-dark-mode": "^4.0.1",
    "svglint": "^2.7.1",
    "tailwindcss": "catalog:*",
    "vite": "catalog:*",
    "vite-svg-loader": "^5.1.0",
    "vitest": "catalog:*"
  }
}
