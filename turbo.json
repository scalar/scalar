{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint:fix": {},
    "build": {
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "playground": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "playground:modal": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "playground:web": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "types:check": {}
  }
}
