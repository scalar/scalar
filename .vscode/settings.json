{
  "eslint.validate": ["vue"],
  "biome.enabled": true,
  "biome.searchInPath": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "pnpm-lock.yaml": true,
    "**/CHANGELOG.md": true,
    "**/storybook-static": true
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
    }
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
      // "source.organizeImports.biome": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit"
      // Disabled due to mangling the imports during change
      // "source.organizeImports.biome": "explicit"
    }
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.biome": "never",
      "source.organizeImports.biome": "never"
    }
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "files.associations": {
    "turbo.json": "jsonc"
  },
  "cSpell.enabledFileTypes": {
    "*": true
  },
  "css.customData": [".vscode/tailwind.json"],
  "git.pullTags": false,
  "vue.complete.casing.props": "camel",
  "vue.complete.casing.tags": "pascal",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.experimental.configFile": {
    "packages/api-client/src/style.css": "packages/api-client/**",
    "packages/api-reference/src/style.css": "packages/api-reference/**",
    "packages/components/src/style.css": "packages/components/**"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "vitest.commandLine": "pnpm vitest",
  "vitest.enable": true
}
