{
  "name": "@scalar/webjar",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "integrations/java/webjar"
  },
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "command -v mvn >/dev/null 2>&1 && pnpm copy:standalone && mvn clean package || echo '⚠️ Maven is not available or the build failed, ignoring it.'",
    "copy:standalone": "shx cp ../../../packages/api-reference/dist/browser/standalone.js ./src/main/resources/META-INF/resources/webjars/scalar/scalar.js",
    "update:version": "mvn versions:set -DnewVersion=$npm_package_version -DgenerateBackupPoms=false",
    "release": "mvn deploy",
    "test": "mvn clean test",
    "local:install": "command -v mvn >/dev/null 2>&1 && pnpm copy:standalone && mvn clean install -Dgpg.skip=true || echo '⚠️ Maven is not available or the build failed, ignoring it.'"
  },
  "dependencies": {
    "@scalar/api-reference": "workspace:*"
  },
  "devDependencies": {
    "@scalar/build-tooling": "workspace:*",
    "shx": "^0.4.0"
  }
}
