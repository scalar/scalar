<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <!-- We use this to conditionally include code from the shared project -->
    <DefineConstants>SCALAR_ASPIRE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Scalar.Aspire</Title>
    <Description>Automatically discover and create a unified, interactive API Reference for all your .NET Aspire services from their OpenAPI/Swagger documents.</Description>
    <Authors>Scalar</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/scalar/scalar</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageTags>Scalar;OpenAPI;Swagger;API Reference;Aspire</PackageTags>
    <PackageProjectUrl>https://scalar.com</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>Please checkout https://github.com/scalar/scalar/blob/main/integrations/dotnet/aspire/CHANGELOG.md</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../../../shared/src/Scalar.Shared/**/*.cs" Exclude="../../../shared/src/Scalar.Shared/obj/**/*" Link="shared/%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting" Version="13.1.0" />
    <PackageReference Include="NetEscapades.EnumGenerators.Generators" Version="1.0.0-beta20" PrivateAssets="all" ExcludeAssets="runtime" NoWarn="NU5104" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).Tests" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>


</Project>
