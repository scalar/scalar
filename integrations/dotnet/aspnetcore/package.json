{
  "name": "@scalar/aspnetcore",
  "description": "The `Scalar.AspNetCore` NuGet package provides an easy way to render beautiful API References based on OpenAPI/Swagger documents.",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "integrations/dotnet/aspnetcore"
  },
  "version": "2.12.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "compress": "cd ./src/Scalar.AspNetCore/StaticAssets && gzip --keep --verbose --force scalar.js scalar.aspnetcore.js favicon.svg",
    "copy:standalone": "shx cp ../../../packages/api-reference/dist/browser/standalone.js ./src/Scalar.AspNetCore/StaticAssets/scalar.js",
    "format": "scalar-format",
    "format:check": "scalar-format-check",
    "lint:check": "scalar-lint-check",
    "lint:fix": "scalar-lint-fix",
    "test": "vitest"
  },
  "readme": {
    "title": "Scalar API Reference for ASP.NET Core",
    "badges": [
      {
        "type": "nuget-version",
        "package": "Scalar.AspNetCore"
      },
      {
        "type": "nuget-downloads",
        "package": "Scalar.AspNetCore"
      }
    ],
    "documentation": "https://guides.scalar.com/scalar/scalar-api-references/integrations/net-aspnet-core/integration",
    "extraContent": {
      "headline": "Extended Examples",
      "content": "For more realistic examples and advanced usage scenarios, such as authentication, API versioning, and handling multiple documents, check out our [extended examples documentation](https://github.com/scalar/scalar/blob/main/integrations/dotnet/aspnetcore/docs/README.md)."
    }
  },
  "dependencies": {
    "@scalar/api-reference": "workspace:*",
    "@scalar/dotnet-shared": "workspace:*"
  },
  "devDependencies": {
    "@scalar/build-tooling": "workspace:*"
  }
}
