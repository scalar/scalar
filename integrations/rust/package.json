{
  "name": "scalar_api_reference",
  "description": "A Rust crate for embedding Scalar API documentation in web applications",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "integrations/rust"
  },
  "keywords": [
    "api",
    "documentation",
    "openapi",
    "rust",
    "scalar",
    "swagger",
    "web-framework",
    "axum",
    "actix-web",
    "warp"
  ],
  "version": "0.1.1",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "command -v cargo >/dev/null 2>&1 && cargo build --release || echo 'cargo not found, skipping build'",
    "build:debug": "cargo build",
    "check": "cargo check",
    "check:actix-web": "cargo check --features actix-web",
    "check:all": "cargo check --features axum && cargo check --features actix-web && cargo check --features warp",
    "check:axum": "cargo check --features axum",
    "check:warp": "cargo check --features warp",
    "clean": "cargo clean",
    "clippy": "cargo clippy -- -D warnings",
    "clippy:actix-web": "cargo clippy --features actix-web -- -D warnings",
    "clippy:all": "cargo clippy --features axum -- -D warnings && cargo clippy --features actix-web -- -D warnings && cargo clippy --features warp -- -D warnings",
    "clippy:axum": "cargo clippy --features axum -- -D warnings",
    "clippy:warp": "cargo clippy --features warp -- -D warnings",
    "copy:standalone": "shx cp ../../packages/api-reference/dist/browser/standalone.js ./ui/scalar.js",
    "doc": "cargo doc --open",
    "doc:actix-web": "cargo doc --features actix-web --open",
    "doc:axum": "cargo doc --features axum --open",
    "doc:warp": "cargo doc --features warp --open",
    "example:actix": "cargo run --example actix --features actix-web",
    "example:axum": "cargo run --example axum --features axum",
    "example:warp": "cargo run --example warp --features warp",
    "fmt": "cargo fmt",
    "fmt:check": "cargo fmt -- --check",
    "lint:check": "cargo clippy -- -D warnings && cargo fmt -- --check",
    "lint:fix": "cargo clippy --fix --allow-dirty && cargo fmt",
    "publish:check": "cargo publish --dry-run",
    "test": "command -v cargo >/dev/null 2>&1 && cargo test || echo 'cargo not found, skipping test'",
    "test:actix-web": "cargo test --features actix-web",
    "test:all": "cargo test --features axum && cargo test --features actix-web && cargo test --features warp",
    "test:axum": "cargo test --features axum",
    "test:warp": "cargo test --features warp"
  },
  "type": "module",
  "main": "./src/lib.rs",
  "files": [
    "Cargo.toml",
    "Cargo.lock",
    "src/",
    "ui/",
    "examples/",
    "README.md",
    "CHANGELOG.md"
  ],
  "rust": {
    "crate": "scalar_api_reference",
    "version": "0.1.0",
    "features": [
      "axum",
      "actix-web",
      "warp"
    ],
    "examples": [
      "axum",
      "actix",
      "warp"
    ]
  },
  "dependencies": {},
  "devDependencies": {}
}
