{
  "name": "@scalar/nextjs-api-reference",
  "description": "a Next.js component to render API references from an OpenAPI file",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "integrations/nextjs"
  },
  "keywords": [
    "api",
    "documentation",
    "next.js",
    "nextjs",
    "openapi",
    "swagger"
  ],
  "version": "0.8.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm types:check && pnpm build-only",
    "build-only": "vite build",
    "format": "scalar-format",
    "format:check": "scalar-format-check",
    "lint:check": "scalar-lint-check",
    "lint:fix": "scalar-lint-fix",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "./dist/index.js",
  "dependencies": {
    "@scalar/core": "workspace:*",
    "@scalar/types": "workspace:*"
  },
  "devDependencies": {
    "@scalar/api-reference": "workspace:*",
    "@types/node": "catalog:*",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "next": "^15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite": "catalog:*",
    "vite-plugin-dts": "^4.3.0"
  },
  "peerDependencies": {
    "next": "^15.2.4",
    "react": "^19.0.0"
  }
}
