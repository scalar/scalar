{
  "name": "@scalar/sveltekit",
  "description": "A SvelteKit server handler to render API references from an OpenAPI file",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "integrations/sveltekit"
  },
  "keywords": [
    "api",
    "documentation",
    "svelte",
    "sveltekit",
    "openapi",
    "swagger"
  ],
  "version": "0.1.5",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "svelte-package --input src",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "prepack": "pnpm build && publint"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "src",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "dependencies": {
    "@scalar/core": "workspace:*",
    "@scalar/types": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.20.6",
    "@sveltejs/package": "^2.0.0",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.20.6",
    "svelte": "^5.0.0"
  }
}
