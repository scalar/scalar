{
  "name": "@scalar/express-api-reference",
  "description": "Express middleware to serve beautiful, interactive API documentation from OpenAPI/Swagger documents.",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalar/scalar.git",
    "directory": "integrations/express"
  },
  "version": "0.8.40",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "scalar-build-esbuild",
    "build:playground": "cd playground && pnpm build",
    "dev": "nodemon --exec \"vite-node playground/index.ts\" --watch playground --ext ts --quiet",
    "docker:build": "docker build --build-arg BASE_IMAGE=scalar-base -t express-api-reference -f Dockerfile .",
    "docker:run": "docker run -p 5055:5055 express-api-reference",
    "format": "scalar-format",
    "format:check": "scalar-format-check",
    "lint:check": "scalar-lint-check",
    "lint:fix": "scalar-lint-fix",
    "test": "vitest",
    "types:build": "scalar-types-build",
    "types:check": "scalar-types-check"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "./dist",
    "CHANGELOG.md"
  ],
  "readme": {
    "title": "Scalar API Reference Plugin for Express",
    "badges": [
      {
        "type": "npm-version"
      },
      {
        "type": "npm-downloads"
      },
      {
        "type": "npm-license"
      }
    ],
    "documentation": "https://scalar.com/products/api-references/integrations/express"
  },
  "dependencies": {
    "@scalar/core": "workspace:*"
  },
  "devDependencies": {
    "@scalar/build-tooling": "workspace:*",
    "@types/express": "catalog:*",
    "@types/supertest": "catalog:*",
    "@types/swagger-jsdoc": "^6.0.3",
    "express": "catalog:*",
    "supertest": "catalog:*",
    "swagger-jsdoc": "^6.2.8",
    "vite": "catalog:*",
    "vitest": "catalog:*"
  }
}
